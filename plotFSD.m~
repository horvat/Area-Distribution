%% Plotting
function plotFSD(D,A,A0,A1,meltstats,Save,Time,tlength)

FSDmat = [A;A0;A1];

Relmag = [0*Time' + 1;meltstats(:,3)';meltstats(:,5)';meltstats(:,7)'];
Mag = [meltstats(:,1)';meltstats(:,2)';meltstats(:,4)';meltstats(:,6)'];
    
%  Auto-generated by MATLAB on 01-Mar-2013 08:22:14
% Create figure
figure1 = figure;

% Create subplot
subplot1 = subplot(2,2,1,'Parent',figure1,'YScale','log','YMinorTick','on');
box(subplot1,'on');
hold(subplot1,'all');

% Create multiple lines using matrix input to semilogy
semilogy1 = loglog(D',FSDmat,'Parent',subplot1,'LineWidth',2);
set(semilogy1(1),'Color',[1 0 0],'DisplayName','Area dist at T =  5e5');
set(semilogy1(2),'Color',[0 1 0],'DisplayName','Area dist at T =      0');
set(semilogy1(3),'Marker','o','LineStyle','none','Color',[0 0 1],...
    'DisplayName','Pack Area dist',...
    'LineWidth',0.5);

% Create xlabel
xlabel('Diameter');

% Create ylabel
ylabel('Fractional Area');

% Create title
title('Area dist at T = 0 and T = Tend','FontSize',16,...
    'FontName','Hoefler Text');

% Create legend
legend(subplot1,'show');

% Create subplot
subplot2 = subplot(2,2,2,'Parent',figure1,'YScale','log','YMinorTick','on');
box(subplot2,'on');
hold(subplot2,'all');

% Create multiple lines using matrix input to semilogy

semilogy2 = loglog(Time,Relmag,'Parent',subplot2,'LineWidth',2);

set(semilogy2(1),'Color',[0 1 0],'DisplayName','1');
set(semilogy2(2),'LineStyle','--','Color',[0 0 1],...
    'DisplayName','Melting');
set(semilogy2(3),'LineStyle','-.','Color',[1 0 0],...
    'DisplayName','Redist');
set(semilogy2(4),'LineStyle','-.','Color',[0 1 1],...
    'DisplayName','Swell');

% Create xlabel
xlabel('Time');

% Create ylabel
ylabel('Ratio of Area Change');

% Create title
title('Relative Area Change to advection',...
    'FontSize',16,...
    'FontName','Hoefler Text');

% Create legend
legend(subplot2,'show');

% Create subplot
subplot3 = subplot(2,2,3,'Parent',figure1,'YScale','log','YMinorTick','on');
box(subplot3,'on');
hold(subplot3,'all');

% Create multiple lines using matrix input to semilogy
semilogy3 = loglog(Time,Mag,'Parent',subplot3,'LineWidth',2);
set(semilogy3(1),'Color',[0 1 0],'DisplayName','Advect');
set(semilogy3(2),'LineStyle','--','Color',[0 0 1],'DisplayName','Melt');
set(semilogy3(3),'LineStyle','-.','Color',[1 0 0],...
    'DisplayName','Redist');
set(semilogy3(4),'LineStyle','-.','Color',[0 1 1],'DisplayName','Swell');

% Create xlabel
xlabel('Time');

% Create ylabel
ylabel({'Area Change',''});

% Create title
title('Total Area change','FontSize',16,'FontName','Hoefler Text');

% Create legend
legend(subplot3,'show');

%Create subplot
subplot4 = subplot(2,2,4,'Parent',figure1,'YScale','log','XScale','log','YMinorTick','on');
hold(subplot4,'all');

% Create multiple lines using matrix input to plot
plot1 = semilogx(D',Save/tlength,'Parent',subplot4,'LineWidth',2);
set(plot1(1),'LineStyle','--','Color',[0 1 0],...
   'DisplayName','Advect');
set(plot1(2),'LineStyle','-.','Color',[0 0 1],'DisplayName','Melt');
set(plot1(3),'LineStyle','-.','Color',[1 0 0],...
   'DisplayName','Redist');
set(plot1(4),'LineStyle','--','Color',[0 1 1],'DisplayName','Swell');

% Create xlabel
xlabel({'Diameter',''});

% Create ylabel
ylabel({'Integrated Area Change',''});

% Create title
title('Average Change',...
    'FontSize',16,...
    'FontName','Hoefler Text');

% Create legend
legend(subplot4,'show');

hgexport(figure1,'Timevarying.eps')

end